#include <iostream>

using namespace std;

int main()
{
    int p = 3;
    for (int i = 1; i <= 7; i++)
    {

        if (i <= 4)
        {
            for (int j = 1; j <= i; j++)
            {
                cout << "*";
            }
            cout << endl;
        }
        else
        {

            for (int j = p; j >= 1; j--)
            {
                cout << "*";
            }
            cout << endl;
            p--;
        }
    }
} // namespace std;


